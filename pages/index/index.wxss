}

.btn-text {
  font-size: 24rpx !important;
  font-weight: 500 !important;
  line-height: 1.2 !important;
}

/* 按钮渐变背景样式 */
.btn.wanwei {
  background: linear-gradient(135deg, #4A90E2, #357ABD) !important;
  color: #fff !important;
}

.btn.challenge {
  background: linear-gradient(135deg, #4A90E2, #357ABD) !important;
  color: #fff !important;
}

.btn.breakthrough {
