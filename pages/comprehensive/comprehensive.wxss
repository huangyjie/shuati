/* 页面容器 */
.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #4A90E2 0%, #D4E9FF 30%, #E8F4FF 100%);
}

/* 暗黑模式下的背景 */
.dark-mode.page-wrapper {
  background: linear-gradient(180deg, #2d2d2d 0%, #1f1f1f 30%, #151515 100%);
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 20rpx;
}

/* 用户信息区域 - 默认样式 */
.user-section {
  margin: 0 20rpx;
  margin-top: calc(var(--status-bar-height) + 44px + 20rpx);
  border-radius: 24rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.2);
  transition: all 0.3s ease;
  position: relative;
}

/* 渐变边框效果 */
.user-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 6rpx solid transparent;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #4A90E2, #357ABD) border-box;
  -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: destination-out;
  mask-composite: exclude;
}

/* 不同段位的边框样式 */
.user-section.tier-supreme::before {
  background: linear-gradient(135deg, #8a2be2, #ffd700) border-box;
  box-shadow: 0 0 20rpx rgba(138, 43, 226, 0.3);
}

.user-section.tier-king::before {
  background: linear-gradient(135deg, #ff4d4f, #ffd700) border-box;
  box-shadow: 0 0 20rpx rgba(255, 77, 79, 0.3);
}

.user-section.tier-master::before {
  background: linear-gradient(135deg, #722ed1, #b07feb) border-box;
  box-shadow: 0 0 20rpx rgba(114, 46, 209, 0.3);
}

.user-section.tier-diamond::before {
  background: linear-gradient(135deg, #1890ff, #85f4ff) border-box;
  box-shadow: 0 0 20rpx rgba(24, 144, 255, 0.3);
}

.user-section.tier-platinum::before {
  background: linear-gradient(135deg, #13c2c2, #a8ffff) border-box;
  box-shadow: 0 0 20rpx rgba(19, 194, 194, 0.3);
}

.user-section.tier-gold::before {
  background: linear-gradient(135deg, #faad14, #ffea8a) border-box;
  box-shadow: 0 0 20rpx rgba(250, 173, 20, 0.3);
}

.user-section.tier-silver::before {
  background: linear-gradient(135deg, #8c8c8c, #d9d9d9) border-box;
  box-shadow: 0 0 20rpx rgba(140, 140, 140, 0.3);
}

.user-section.tier-bronze::before {
  background: linear-gradient(135deg, #a6754b, #d5b092) border-box;
  box-shadow: 0 0 20rpx rgba(166, 117, 75, 0.3);
}

/* 暗黑模式适配 */
.dark-mode .user-section::before {
  opacity: 0.8;
}

