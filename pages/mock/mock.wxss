.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #4A90E2 0%, #D4E9FF 30%, #E8F4FF 100%);
}

/* 自定义导航栏 */
.nav-bar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  align-items: flex-end;
  padding-bottom: 10rpx;
}

.nav-bar-inner {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 0 20rpx;
}

.nav-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.container {
  padding: 240rpx 20rpx 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  background: transparent;
}

/* 深色模式下的背景 */
.dark-mode.page-wrapper {
  background: linear-gradient(180deg, #2d2d2d 0%, #1f1f1f 30%, #151515 100%);
}

.header {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #ffffff;
  line-height: 1.4;
}

.paper-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.paper-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.paper-card:active {
  transform: scale(0.98);
}

.paper-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.paper-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.paper-badge {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

.paper-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.1);
}

.paper-info {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 16rpx;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  display: block;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.start-btn {
  width: 100% !important;
  height: 88rpx !important;
  background: linear-gradient(135deg, #4A90E2, #357ABD) !important;
  border: none !important;
  border-radius: 44rpx !important;
  color: #fff !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 8rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.2) !important;
  transition: all 0.3s ease !important;
}

.start-btn.disabled {
  background: rgba(255, 255, 255, 0.2) !important;
  color: rgba(255, 255, 255, 0.6) !important;
  box-shadow: none !important;
  cursor: not-allowed;
}

.start-btn:not(.disabled):active {
  transform: translateY(2rpx);
  opacity: 0.9;
}

.btn-text {
  font-weight: 500;
}

.btn-icon {
  width: 28rpx;
  height: 28rpx;
  display: block;
  transition: transform 0.3s ease;
}

.start-btn:not(.disabled):active .btn-icon {
  transform: translateX(4rpx);
}

/* 深色模式样式 */
.dark-mode .paper-card {
  background: rgba(45, 45, 45, 0.9);
}

.dark-mode .paper-title {
  color: #fff;
}

.dark-mode .paper-stats {
  background: rgba(45, 45, 45, 0.5);
}

.dark-mode .stat-label {
  color: #aaa;
}

.dark-mode .stat-value {
  color: #fff;
}

.dark-mode .stat-divider {
  background: rgba(255, 255, 255, 0.1);
}

.dark-mode .paper-info {
  background: rgba(45, 45, 45, 0.5);
}

.dark-mode .info-text {
  color: #aaa;
}

.dark-mode .start-btn {
  background: linear-gradient(135deg, #357ABD, #2171c7) !important;
  box-shadow: 0 4rpx 12rpx rgba(53, 122, 189, 0.3) !important;
}

.dark-mode .start-btn.disabled {
  background: rgba(255, 255, 255, 0.1) !important;
  color: rgba(255, 255, 255, 0.4) !important;
}

/* 登录提示样式 */
.login-tip {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.98);
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.tip-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.login-btn {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 48rpx;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-left: 24rpx;
  position: relative;
  overflow: hidden;
}

.login-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.login-btn:active {
  transform: translateY(2rpx) scale(0.98);
}

.login-btn:active::after {
  opacity: 1;
}

/* 深色模式样式 */
.dark-mode .login-tip {
  background: rgba(45, 45, 45, 0.98);
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.dark-mode .tip-text {
  color: #fff;
}

.dark-mode .login-btn {
  background: linear-gradient(135deg, #357ABD, #2171c7);
  box-shadow: 0 6rpx 16rpx rgba(53, 122, 189, 0.3);
}