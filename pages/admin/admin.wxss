/* 基础样式 */
.admin-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
  transition: all 0.3s ease;
}

.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 统计数据样式 */
.stats-section {
  margin: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stats-card {
  background: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 160rpx;
}

.stats-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.stats-value {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 12rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.stats-card .clear-btn {
  width: 80%;
  font-size: 22rpx;
  padding: 8rpx 0;
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #fff;
  border-radius: 30rpx;
  margin: 16rpx auto 0;
  line-height: 1.6;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(207, 19, 34, 0.3);
}

.stats-card .clear-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(207, 19, 34, 0.2);
}

.dark-mode .stats-card .clear-btn {
  background: linear-gradient(135deg, #cf1322 0%, #a8071a 100%);
  box-shadow: 0 2rpx 8rpx rgba(168, 7, 26, 0.3);
}

/* 用户管理样式 */
.section-card {
  background: #fff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 搜索框样式 */
.search-section {
  padding: 24rpx 0;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.15);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-search {
  padding: 16rpx;
  color: #999;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.clear-search:active {
  transform: scale(0.9);
}

/* 用户列表样式 */
.user-list {
  margin-top: 24rpx;
}

.user-item {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  margin-right: 24rpx;
  border: 2rpx solid #f0f2f5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  background-color: #fff;
}

.user-detail {
  flex: 1;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.phone {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.user-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin: 24rpx 0;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.stat-item {
  text-align: center;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.stat-item:active {
  transform: scale(0.98);
}

.stat-item .label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-item .value {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 600;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f2f5;
}

.action-btn {
  font-size: 24rpx;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.action-btn.edit {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.action-btn.reset {
  background: linear-gradient(135deg, #f5a623 0%, #f39c12 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(245, 166, 35, 0.3);
}

.action-btn.delete {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 85%;
  max-height: 80vh;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f2f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.close-btn:active {
  transform: scale(0.9);
}

.modal-body {
  padding: 32rpx;
  max-height: calc(80vh - 200rpx);
  overflow-y: auto;
}

.input-item {
  margin-bottom: 24rpx;
}

.input-item .label {
  display: block;
  margin-bottom: 12rpx;
  color: #333;
  font-size: 28rpx;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f0f2f5;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.modal-btn {
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.modal-btn:active {
  transform: scale(0.95);
}

.modal-btn.cancel {
  background: #f0f2f5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
}

/* 加载和无数据状态 */
.loading, .no-data {
  text-align: center;
  padding: 48rpx;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.dark-mode .loading,
.dark-mode .no-data {
  background: #1f1f1f;
  color: #999;
}

/* 动画关键帧 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    transform: translateY(50rpx);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
}

