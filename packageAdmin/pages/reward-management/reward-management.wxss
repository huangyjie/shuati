.reward-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 50rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
}

/* Â•ñÂä±ÂèëÊîæÂç°Áâá */
.reward-card {
  margin: 30rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transform: translateY(0);
  transition: all 0.3s ease;
}

.reward-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  padding: 35rpx;
  text-align: center;
  border-bottom: 2rpx solid #f0f2f5;
  background: linear-gradient(to right, #f8f9fa, #fff, #f8f9fa);
}

.card-content {
  padding: 40rpx;
}

.input-item {
  margin-bottom: 30rpx;
  position: relative;
  transition: all 0.3s ease;
}

.input-item:hover {
  transform: translateY(-2rpx);
}

.label {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: #4A90E2;
  border-radius: 50%;
  margin-right: 12rpx;
  opacity: 0.8;
}

.reward-input {
  width: 100%;
  height: 92rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  text-align: left;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.reward-input:focus {
  border-color: #4A90E2;
  background: #fff;
  box-shadow: 0 0 0 3rpx rgba(74, 144, 226, 0.1);
}

.conditions-section {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 40rpx 0;
  position: relative;
}

.section-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-label::before {
  content: 'üéØ';
  font-size: 32rpx;
}

.condition-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  transition: all 0.3s ease;
}

.condition-item:last-child {
  margin-bottom: 0;
}

.condition-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.condition-label {
  font-size: 28rpx;
  color: #666;
  min-width: 180rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.condition-label::before {
  content: '';
  width: 6rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 50%;
  opacity: 0.6;
}

.condition-input {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin: 0 20rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  transition: all 0.3s ease;
}

.condition-input:focus {
  border-color: #4A90E2;
  background: #fff;
  box-shadow: 0 0 0 3rpx rgba(74, 144, 226, 0.1);
}

.condition-unit {
  font-size: 28rpx;
  color: #999;
  min-width: 40rpx;
}

.tips {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin: 30rpx 0;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.tips::before {
  content: 'üí°';
  font-size: 28rpx;
}

.reward-btn {
  width: 100%;
  height: 92rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.2);
  position: relative;
  overflow: hidden;
}

.reward-btn::after {
  content: '‚ú®';
  font-size: 32rpx;
}

.reward-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0));
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.reward-btn:active::before {
  transform: translateX(100%);
}

.reward-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(74, 144, 226, 0.15);
}

.reward-btn.loading {
  opacity: 0.7;
}

.reward-btn.loading::after {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #fff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: loading 0.8s infinite linear;
}

@keyframes loading {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

