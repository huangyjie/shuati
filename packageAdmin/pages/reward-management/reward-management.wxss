.history-section {
  margin: 40rpx 30rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 24rpx;
  border-left: 8rpx solid #4A90E2;
  display: flex;
  align-items: center;
}

.history-list {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.history-item {
  padding: 36rpx;
  border-bottom: 2rpx solid #f0f2f5;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  transition: all 0.3s ease;
  position: relative;
}

.history-item:active {
  background: #f8f9fa;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
  position: relative;
}

.history-name-points {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.history-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  flex-shrink: 0;
}

.history-points {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A90E2;
  background: rgba(74, 144, 226, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
}

.history-conditions {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 20rpx 0;
}

.history-conditions text {
  font-size: 26rpx;
  color: #666;
  background: #f8f9fa;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid #e8e8e8;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.history-conditions text::before {
  content: '';
  width: 12rpx;
  height: 12rpx;
  background: #4A90E2;
  border-radius: 50%;
  opacity: 0.6;
}

.history-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx dashed #f0f2f5;
}

.history-count {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.history-count::before {
  content: 'üë•';
  font-size: 32rpx;
}

.history-time {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.history-time::before {
  content: 'üïí';
  font-size: 28rpx;
}

.history-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f2f5;
}

.action-btn {
  flex: 1;
  height: 76rpx !important;
  font-size: 28rpx !important;
  padding: 0 32rpx !important;
  border-radius: 38rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  gap: 8rpx !important;
  margin: 0 !important;
  transition: all 0.3s ease !important;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1) !important;
  position: relative;
  overflow: hidden;
}

.action-btn::after {
  display: none;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0));
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.action-btn:active::before {
  transform: translateX(100%);
}

.enable-btn {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%) !important;
  color: #fff !important;
}

.enable-btn::after {
  content: '‚úì';
  margin-left: 6rpx;
  font-size: 32rpx;
}

.disable-btn {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%) !important;
  color: #fff !important;
}

.disable-btn::after {
  content: '‚è∏';
  margin-left: 6rpx;
  font-size: 28rpx;
}

.delete-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%) !important;
  color: #fff !important;
}

.delete-btn::after {
  content: 'üóë';
  margin-left: 6rpx;
  font-size: 32rpx;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.95;
}

