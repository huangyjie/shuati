.illegal-accounts-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.dark-mode {
  background-color: #1f1f1f;
  color: #ffffff;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.batch-rename-btn {
  background-color: #007AFF;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
}

.dark-mode .batch-rename-btn {
  background-color: #0A84FF;
}

.accounts-list {
  height: calc(100vh - 140rpx);
}

.account-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.dark-mode .account-item {
  background-color: #2c2c2c;
  box-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.1);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.account-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.phone {
  font-size: 26rpx;
  color: #666;
}

.dark-mode .phone {
  color: #999;
}

.stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 150rpx;
}

.points, .questions {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.dark-mode .points,
.dark-mode .questions {
  color: #999;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: calc(100vh - 140rpx);
  color: #666;
  font-size: 28rpx;
}

.dark-mode .loading-container,
.dark-mode .empty-container {
  color: #999;
} 