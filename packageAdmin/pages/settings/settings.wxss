.settings-container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
  transition: all 0.3s ease;
}

.dark-mode {
  background-color: #1a1a1a;
  color: #ffffff;
}

.dark-mode .section-card {
  background-color: #2d2d2d;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.header {
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  transition: color 0.3s ease;
}

.section-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.section-header {
  padding: 0 0 30rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.dark-mode .section-header {
  border-bottom-color: #3d3d3d;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  transition: color 0.3s ease;
  display: block;
  margin-bottom: 10rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #666;
  transition: color 0.3s ease;
}

.dark-mode .section-desc {
  color: #999;
}

.settings-list {
  padding: 0;
}

.settings-item {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.settings-textarea {
  width: 100%;
  min-height: 240rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
  transition: all 0.3s ease;
  background-color: #ffffff;
}

.dark-mode .settings-textarea {
  background-color: #3d3d3d;
  border-color: #4d4d4d;
  color: #ffffff;
}

.settings-textarea:focus {
  border-color: #4A90E2;
  box-shadow: 0 0 0 2rpx rgba(74, 144, 226, 0.1);
}

.dark-mode .settings-textarea:focus {
  border-color: #4A90E2;
  background-color: #2d2d2d;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  transition: color 0.3s ease;
}

.dark-mode .textarea-counter {
  color: #666;
}

.save-section {
  padding: 40rpx 0;
}

.save-btn {
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0 auto;
  transition: all 0.3s ease;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.dark-mode .save-btn {
  background: linear-gradient(135deg, #357ABD 0%, #1a4a85 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.save-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
  color: #999;
  transition: color 0.3s ease;
}

.dark-mode .loading {
  color: #666;
} 