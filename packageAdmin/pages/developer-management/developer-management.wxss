.developer-management-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
  transition: all 0.3s ease;
}

.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 操作区域样式 */
.action-section {
  padding: 24rpx;
  display: flex;
  justify-content: flex-end;
}

.add-btn {
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

/* 开发者列表样式 */
.developer-list {
  padding: 0 24rpx;
}

.developer-item {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.developer-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.developer-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  flex-shrink: 0;
}

.developer-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.developer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.developer-role {
  font-size: 26rpx;
  color: #4A90E2;
}

.developer-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.developer-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f2f5;
}

.action-btn {
  font-size: 24rpx;
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.action-btn.edit {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(74, 144, 226, 0.3);
}

.action-btn.delete {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 90%;
  max-width: 800rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

.modal-header {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f2f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
  transition: all 0.3s ease;
}

.close-btn:active {
  transform: scale(0.9);
}

.modal-body {
  padding: 32rpx;
}

.form-grid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.input-group {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.input-item {
  position: relative;
}

.input-item.full-width {
  grid-column: 1 / -1;
}

.input-item .label {
  display: block;
  margin-bottom: 12rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.input-item .tips {
  display: block;
  margin-top: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.user-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
  border: 2rpx solid #e8e8e8;
}

.user-textarea {
  width: 100%;
  min-height: 160rpx;
  max-height: 320rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  border: 2rpx solid #e8e8e8;
}

.preview-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f2f5;
}

.preview-title {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.developer-item.preview {
  margin: 0;
  background: #f8f9fa;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f0f2f5;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.modal-btn {
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.modal-btn.cancel {
  background: #f0f2f5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: #fff;
}

/* 加载和无数据状态 */
.loading, .no-data {
  text-align: center;
  padding: 48rpx;
  color: #999;
  font-size: 28rpx;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { 
    transform: translateY(50rpx);
    opacity: 0;
  }
  to { 
    transform: translateY(0);
    opacity: 1;
  }
}

/* 暗黑模式样式 */
.dark-mode {
  background-color: #121212;
}

.dark-mode .header {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.dark-mode .title {
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.dark-mode .add-btn {
  background: linear-gradient(135deg, #357ABD 0%, #1a4a85 100%);
  box-shadow: 0 2rpx 8rpx rgba(53, 122, 189, 0.3);
}

.dark-mode .developer-item {
  background: #1f1f1f;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.dark-mode .developer-name {
  color: #fff;
}

.dark-mode .developer-role {
  color: #4A90E2;
}

.dark-mode .developer-desc {
  color: #999;
}

.dark-mode .developer-actions {
  border-color: #2d2d2d;
}

.dark-mode .action-btn.edit {
  background: linear-gradient(135deg, #357ABD 0%, #1a4a85 100%);
}

.dark-mode .action-btn.delete {
  background: linear-gradient(135deg, #cf1322 0%, #a8071a 100%);
}

.dark-mode .modal-content {
  background: #1f1f1f;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.3);
}

.dark-mode .modal-header,
.dark-mode .modal-footer,
.dark-mode .preview-section {
  border-color: #2d2d2d;
}

.dark-mode .modal-title {
  color: #fff;
}

.dark-mode .close-btn {
  color: #999;
}

.dark-mode .input-item .label {
  color: #fff;
}

.dark-mode .input-item .tips {
  color: #666;
}

.dark-mode .user-input {
  background: #2d2d2d;
  border-color: #3d3d3d;
  color: #fff;
}

.dark-mode .user-input:focus {
  border-color: #4A90E2;
  background: #1f1f1f;
}

.dark-mode .user-input::placeholder {
  color: #666;
}

.dark-mode .user-textarea {
  background: #2d2d2d;
  border-color: #3d3d3d;
  color: #fff;
}

.dark-mode .user-textarea:focus {
  border-color: #4A90E2;
  background: #1f1f1f;
}

.dark-mode .preview-title {
  color: #999;
}

.dark-mode .developer-item.preview {
  background: #2d2d2d;
}

.dark-mode .modal-btn.cancel {
  background: #2d2d2d;
  color: #999;
}

.dark-mode .modal-btn.confirm {
  background: linear-gradient(135deg, #357ABD 0%, #1a4a85 100%);
}

.dark-mode .loading,
.dark-mode .no-data {
  background: #1f1f1f;
  color: #999;
}

@media screen and (max-width: 375px) {
  .input-group {
    grid-template-columns: 1fr;
  }
  
  .modal-content {
    width: 95%;
  }
} 