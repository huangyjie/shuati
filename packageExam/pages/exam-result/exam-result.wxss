.result-container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  background: #f5f5f5;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.score-section {
  text-align: center;
  margin-bottom: 40rpx;
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.score {
  font-size: 120rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1;
}

.score.pass {
  color: #52c41a;
}

.score.fail {
  color: #ff4d4f;
}

.score-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.pass-status {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
  padding: 10rpx 0;
}

.pass-status.pass {
  color: #52c41a;
}

.pass-status.fail {
  color: #ff4d4f;
}

.pass-hint {
  font-size: 28rpx;
  margin-top: 16rpx;
  padding: 10rpx 0;
}

.pass-hint.pass {
  color: #52c41a;
}

.pass-hint.fail {
  color: #ff4d4f;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.pass-score-section {
  background: #fff;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.pass-score-text {
  font-size: 28rpx;
  color: #666;
}

.wrong-questions {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  flex: 1;
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #ff4d4f;
}

.question-list {
  max-height: calc(100vh - 600rpx);
  overflow-y: auto;
  padding-right: 20rpx;
}

.question-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.question-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.answer-info {
  display: flex;
  gap: 40rpx;
  font-size: 26rpx;
}

.wrong {
  color: #ff4d4f;
}

.correct {
  color: #52c41a;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 100;
}

.action-btn {
  width: 100% !important;
  height: 88rpx !important;
  border-radius: 44rpx !important;
  font-size: 32rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  margin: 0 !important;
  padding: 0 !important;
}

.action-btn:nth-child(1) {
  background: #1aad19 !important;
  color: #fff !important;
  border: none !important;
}

.action-btn:nth-child(2) {
  background: #fff !important;
  color: #1aad19 !important;
  border: 2rpx solid #1aad19 !important;
}

.action-btn:nth-child(3) {
  background: #f5f5f5 !important;
  color: #666 !important;
  border: none !important;
}

.action-btn::after {
  border: none;
}

/* 夜间模式样式 */
.dark-mode {
  background: #1f1f1f;
}

.dark-mode .score-section,
.dark-mode .stats-section,
.dark-mode .pass-score-section,
.dark-mode .button-group {
  background: #2d2d2d;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.dark-mode .score-label,
.dark-mode .stat-label,
.dark-mode .pass-score-text {
  color: #999;
}

.dark-mode .stat-value {
  color: #fff;
}

.dark-mode .action-btn:nth-child(2) {
  background: #2d2d2d !important;
}

.dark-mode .action-btn:nth-child(3) {
  background: #3d3d3d !important;
  color: #999 !important;
}

.answer-details {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.dark-mode .answer-details {
  background: #2d2d2d;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.details-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.dark-mode .details-title {
  color: #fff;
  border-bottom: 1rpx solid #444;
}

.details-list {
  margin-top: 20rpx;
}

.detail-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  background: #f8f8f8;
  border-left: 6rpx solid #ddd;
}

.dark-mode .detail-item {
  background: #383838;
  border-left: 6rpx solid #555;
}

.detail-item.correct {
  border-left-color: #4CAF50;
}

.detail-item.wrong {
  border-left-color: #f44336;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.question-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.dark-mode .question-number {
  color: #bbb;
}

.question-source {
  font-size: 24rpx;
  color: #888;
  background: #eee;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.dark-mode .question-source {
  color: #aaa;
  background: #444;
}

.question-title {
  font-size: 28rpx;
  color: #333;
  margin: 16rpx 0;
  line-height: 1.6;
}

.dark-mode .question-title {
  color: #fff;
}

.options {
  margin: 16rpx 0;
}

.option {
  font-size: 26rpx;
  color: #666;
  margin: 8rpx 0;
  padding: 8rpx 0;
}

.dark-mode .option {
  color: #bbb;
}

.answer-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.dark-mode .answer-info {
  border-top: 1rpx solid #444;
}

.correct-answer {
  color: #4CAF50;
}

.user-answer {
  color: #666;
}

.user-answer.correct {
  color: #4CAF50;
}

.user-answer.wrong {
  color: #f44336;
}

.dark-mode .user-answer {
  color: #bbb;
}

.dark-mode .user-answer.correct {
  color: #81c784;
}

.dark-mode .user-answer.wrong {
  color: #e57373;
}